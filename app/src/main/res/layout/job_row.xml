<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_filter"
        android:paddingTop="13dp"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="vertical"
             android:id="@+id/item_job_content_main">

            <TextView
                android:id="@+id/item_job_title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center|left"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_job_description_short"
                android:layout_width="302dp"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:text="Descripcion general sobre el trabajo"
                android:textColor="#717171"
                android:textSize="12sp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_job_button_expand"
            android:layout_width="48dp"
            android:layout_height="66dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/triangle"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#d3d7d8"
        android:layout_below="@id/ll_filter" />

    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expandableLayout_expand"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/ll_filter"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        app:ael_duration="400"
        app:ael_expanded="false">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:text="Job Type"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/item_job_type"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:text="Payment"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/item_job_payment"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:text="Payment Type"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/item_job_payment_type"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:text="Country"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/item_job_location"/>

            </TableRow>

        </TableLayout>

    </com.github.aakira.expandablelayout.ExpandableLinearLayout>
</RelativeLayout>