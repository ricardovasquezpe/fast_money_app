<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_filter"
        android:paddingTop="13dp"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="vertical"
             android:id="@+id/item_job_content_main">

            <TextView
                android:id="@+id/item_job_title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center|left"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_job_description_short"
                android:layout_width="302dp"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:text="Descripcion general sobre el trabajo"
                android:textColor="#717171"
                android:textSize="12sp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_job_button_expand"
            android:layout_width="48dp"
            android:layout_height="66dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:rotation="-90"
                android:background="@drawable/triangle"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#d3d7d8"
        android:layout_below="@id/ll_filter" />
</RelativeLayout>